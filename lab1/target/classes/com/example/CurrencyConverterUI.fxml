<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE xml>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>

<AnchorPane prefHeight="230.0" prefWidth="300.0" xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.CurrencyConverterController">
    <children>
        <Label layoutX="14.0" layoutY="14.0" text="Source Currency" />
        <ComboBox fx:id="sourceCurrencyComboBox" layoutX="14.0" layoutY="35.0" prefWidth="120.0" promptText="Select" />

        <Label layoutX="150.0" layoutY="14.0" text="Target Currency" />
        <ComboBox fx:id="targetCurrencyComboBox" layoutX="150.0" layoutY="35.0" prefWidth="120.0" promptText="Select" />

        <Label layoutX="14.0" layoutY="85.0" text="Amount to Convert" />
        <TextField fx:id="AmountToConvert" layoutX="14.0" layoutY="105.0" prefWidth="120.0" promptText="Enter Amount" />

        <Button fx:id="convertButton" layoutX="150.0" layoutY="105.0" mnemonicParsing="false" onAction="#handleConvertButton" text="Convert" />

        <Label layoutX="14.0" layoutY="160.0" text="Converted Amount" />
        <TextField fx:id="resultConverted" layoutX="14.0" layoutY="180.0" prefWidth="256.0" promptText="Converted Amount" />
    </children>
</AnchorPane>